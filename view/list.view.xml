<mvc:View
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	controllerName="noallerg.controller.list"> 
	<VBox
		class="sapUiContentPadding"
		width="100%"
		height="100%">
		<items>
			<Table
				id="table"
				items="{/}"
				title="{i18n>TITLE_MARKERS}">
				
		        <columns>
		          <Column><Text text="{i18n>LBL_TITLE}" /></Column>
		          <Column><Text text="{i18n>LBL_SUBTITLE}" /></Column>
		          <Column><Text text="{i18n>LBL_LATITUDE}" /></Column>
		          <Column><Text text="{i18n>LBL_LONGITUDE}" /></Column>
		        </columns>
		        
		        <items>
		          <ColumnListItem>
		            <cells>
		              <Text text="{title}" />
		              <Text text="{subtitle}" />
		              <Text text="{latitude}" />
		              <Text text="{longitude}" />         
		            </cells>
		          </ColumnListItem>
		        </items>							
				
			</Table>
		</items>
	</VBox>
</mvc:View>