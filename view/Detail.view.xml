<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	controllerName="noallerg.controller.Detail"
	xmlns:semantic="sap.m.semantic">
	<semantic:DetailPage title="{i18n>TITLE_INFO}">
		<semantic:content>
			<Table>
				<columns>
					<Column><Text text="{i18n>LBL_TITLE}"/></Column>
					<Column><Text text="{i18n>LBL_SUBTITLE}"/></Column>
					<Column><Text text="{i18n>LBL_LATITUDE}"/></Column>
					<Column><Text text="{i18n>LBL_LONGITUDE}"/></Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{markers>title}" />
							<Text text="{markers>subtitle}" />
							<Text text="{markers>latitude}" />
							<Text text="{markers>longitude}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
	</semantic:DetailPage>
</mvc:View>
