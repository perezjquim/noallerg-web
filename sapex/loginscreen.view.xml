<mvc:View
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	controllerName="sapex.loginscreen"> 
	<VBox
		class="sapUiContentPadding"
		width="100%"
		alignItems="Center"
		justifyContent="Center">
		<items>
			<Label text="Username" labelFor="fldUser"/>
			<Input id="fldUser" required="true"/>
			<Label text="Password" labelFor="fldPass"/>
			<Input id="fldPass" required="true" type="Password"/>
			<Button text="LOG IN"
				press="onPress"
				ariaDescribedBy="Check the credentials">
			</Button>
		</items>
	</VBox>
</mvc:View>